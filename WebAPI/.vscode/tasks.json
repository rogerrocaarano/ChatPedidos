{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Cloudflare Tunnel",
      "type": "shell",
      "command": "chmod +x .devcontainer/cloudflare-start.sh && ./.devcontainer/cloudflare-start.sh",
      "isBackground": true,
      "group": {
        "kind": "build"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "cloudflared tunnel run",
            "endsPattern": "INF Starting tunnel"
          }
        }
      ]
    },
    {
      "label": "Stop Cloudflare Tunnel",
      "type": "shell",
      // Este comando mata todos los procesos llamados 'cloudflared'.
      // El '|| true' es para evitar que falle la tarea si cloudflared ya est√° muerto.
      "command": "pkill cloudflared || true",
      "group": "build",
      "presentation": {
        "reveal": "never" // Evitamos que abra una terminal adicional al detenerse
      }
    }
  ]
}
