{
  "dockerComposeFile": ["docker-compose.yaml"],
  "name": "dotNET",
  "service": "devcontainer",
  "workspaceFolder": "/workspace/WebAPI",
  "features": {
    "ghcr.io/devcontainers/features/dotnet": {
      "version": "10.0.100",
      "additionalVersions": "9.0.307"
    },
    "ghcr.io/joedmck/devcontainer-features/cloudflared:1": {}
  },
  "postCreateCommand": "dotnet tool restore",
  "customizations": {
    "vscode": {
      "extensions": [
        // "ms-dotnettools.csdevkit",
        "jetbrains.resharper-code",
        "MermaidChart.vscode-mermaid-chart",
        "esbenp.prettier-vscode",
        "csharpier.csharpier-vscode",
        "mhutchie.git-graph",
        "ms-ossdata.vscode-pgsql"
      ],
      "settings": {
        "csharp.preview.improvedLaunchExperience": false,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "[csharp]": {
          "editor.defaultFormatter": "csharpier.csharpier-vscode"
        },
        "[xml]": {
          "editor.defaultFormatter": "csharpier.csharpier-vscode"
        }
      }
    }
  },
  "remoteEnv": {
    "CLOUDFLARED_TUNNEL_TOKEN": "${localEnv:CLOUDFLARED_TUNNEL_TOKEN}",
    "TELEGRAM__TOKEN": "${localEnv:TELEGRAM_TOKEN}"
  }
}
